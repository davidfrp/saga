{
  "name": "@davidfrp/saga",
  "version": "1.0.2",
  "description": "Eases the flow of work for developers.",
  "author": "David Petersen @davidfrp",
  "bin": "./bin/run",
  "homepage": "https://github.com/davidfrp/saga",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "davidfrp/saga",
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@oclif/core": "^2",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^2.4.4",
    "chalk": "^4.1.2",
    "dot": "beta",
    "external-editor": "^3.1.0",
    "fuzzysort": "^2.0.4",
    "got": "^11.0.0",
    "inquirer": "^8.0.0",
    "inquirer-autocomplete-prompt": "^2.0.0",
    "keytar": "^7.9.0",
    "ora": "5.4.1",
    "shelljs": "^0.8.5",
    "update-notifier": "^6.0.2"
  },
  "devDependencies": {
    "@oclif/test": "^2.3.15",
    "@types/chai": "^4",
    "@types/inquirer": "^8.0.0",
    "@types/inquirer-autocomplete-prompt": "^2.0.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.18.23",
    "@types/shelljs": "^0.8.12",
    "@types/update-notifier": "^6.0.4",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "chai": "^4",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "mocha": "^9",
    "nodemon": "^2.0.22",
    "oclif": "^3",
    "shx": "^0.3.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4"
  },
  "oclif": {
    "bin": "saga",
    "dirname": "saga",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "issue": {
        "description": "Work with issues."
      }
    },
    "hooks": {
      "init": [
        "./dist/hooks/init/check-for-update"
      ]
    }
  },
  "scripts": {
    "start": "./bin/run",
    "dev": "nodemon -e js,ts --watch src --exec \"yarn build\"",
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "yarn build && oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "bugs": "https://github.com/davidfrp/saga/issues",
  "keywords": [
    "oclif"
  ],
  "types": "dist/index.d.ts"
}
