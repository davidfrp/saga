{
  "compilerOptions": {
    "declaration": true,
    "module": "NodeNext",
    "outDir": "./dist/",
    "rootDir": "./src/",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "node16",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true
  },
  "include": ["./src/**/*"],
  "ts-node": {
    "esm": true
  }
}
